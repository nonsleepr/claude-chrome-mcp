{
  "name": "claude-chrome-mcp",
  "version": "2.0.0",
  "description": "Unified native host and MCP HTTP server for Claude Browser Extension browser automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claude-chrome-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "install-native-host": "node dist/cli.js --install",
    "uninstall-native-host": "node dist/cli.js --uninstall",
    "status": "node dist/cli.js --status"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "browser",
    "automation",
    "chrome",
    "extension",
    "native-host",
    "native-messaging"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/claude-chrome-mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "express": "^4.21.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
